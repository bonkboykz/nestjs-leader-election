{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2017"],
    "composite": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "preserveWatchOutput": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "lib",
    "outDir": "dist"
  },
  "include": ["**/*", ".eslintrc.js"],
  "exclude": ["__tests__"]
}
